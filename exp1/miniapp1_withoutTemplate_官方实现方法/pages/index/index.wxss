/* pages/index/index.wxss */
.container{
  height:100vh; /*高100视窗*/
  display: flex;
  flex-direction: column;/*垂直布局*/
  align-items: center;/*水平居中*/
  justify-content: space-around;/*垂直方向分散布局*/
}
text{
  color: #014099;
}
.userinfo-display {
  display: flex;
  flex-direction: column;   /* 强制竖直排列 */
  align-items: center;      /* 水平居中 */
  justify-content: center;  /* 垂直居中（如果需要） */
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;   /* 头像和昵称之间间距 */
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #333;
  text-align: center;
}


